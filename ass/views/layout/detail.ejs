<%- include('header')%>
<div style="display: flex;justify-content: center;">
    <% for (let product of products) { %> <!-- Sửa 'products' thành 'product' ở đây -->
       <div class="card" style="width: 18rem; margin-right: 30px;">
           <img src="/image/<%= product.images %>" class="card-img-top" alt="..." height="200px">
           <div class="card-body">
               <h5 class="card-title"><%= product.nameProduct %></h5>
               <h2 class="product__price">$<%= product.priceProduct %></h2>
               <p class="card-text"><%= product.sortDescription %></p>
              
           </div>
       </div>
   <% } %>
</div>

       
  

